                    </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ConsultaCitas">
                            <span class="oi oi-person" aria-hidden="true"></span> Citas
                        </NavLink>
                    </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ConsultaSeguros">
                            <span class="oi oi-credit-card" aria-hidden="true"></span> Seguros
                        </NavLink>
                    </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="consultaprocedimientos">
                            <span class="oi oi-puzzle-piece" aria-hidden="true"></span> Procedimientos
                        </NavLink>
                    </li>

                    
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ConsultaCobros">
                            <span class="oi oi-dollar" aria-hidden="true"></span> Cobros
                        </NavLink>
                    </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="consultausuarios">
                            <span class="oi oi-person" aria-hidden="true"></span> Usuarios
                        </NavLink>
                    </li>
                </ul>
            }

        </li>
        <li class="nav nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="expanRpt">
                <span class="oi oi-zoom-in" aria-hidden="true"></span> Reportes
            </NavLink>

            @if (expanSubMenuRpt)
            {
                <ul class="nav ">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ReportePacientes">
