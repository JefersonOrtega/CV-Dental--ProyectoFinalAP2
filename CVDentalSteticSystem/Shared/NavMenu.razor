                    </li>
                </ul>
            }
        </li>

        <div class="align-bottom ">
            <li class="nav-item px-3">
                @if (authenticationStateProvider.GetAuthenticationStateAsync().Result.User.Identity.IsAuthenticated)
                {
                    <NavLink class="nav-link" href="/logout?returnUrl=/" target="_top">
                        <span class="oi oi-person" aria-hidden="true"></span> Cerrar Sesión
                    </NavLink> }
                else
                {
                    <NavLink class="nav-link" href="/LogInPage">
                        <span class="oi oi-person" aria-hidden="true"></span> Login
                    </NavLink>
                }

            </li>
        </div>

    </ul>
</div>


@code {
    private bool collapseNavMenu = true;
    private bool expanSubMenuR;
    private bool expanSubMenuC;
    private bool expanSubMenuRpt;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;



    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;


        if (expanSubMenuC == true)
        {
            expanSubMenuR = false;
            expanSubMenuRpt = false;
        }

        if (expanSubMenuRpt == true)
        {
            expanSubMenuR = false;
            expanSubMenuC = false;
        }

    }

    private void expanR()
    {
        expanSubMenuR = !expanSubMenuR;

        expanSubMenuC = false;
        expanSubMenuRpt = false;
    }

    private void expanC()
    {
        expanSubMenuC = !expanSubMenuC;

        expanSubMenuR = false;
        expanSubMenuRpt = false;
    }

    private void expanRpt()
    {
        expanSubMenuRpt = !expanSubMenuRpt;

        expanSubMenuC = false;
        expanSubMenuR = false;
    }

}
