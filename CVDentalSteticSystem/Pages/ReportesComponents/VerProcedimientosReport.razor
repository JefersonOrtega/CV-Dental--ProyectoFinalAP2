@page "/ReporteProcedimientos"

@using Reportes
@inject IJSRuntime js

@if (Data is { })
{
    <object data="@pdfContent" width="1500" height="600"></object>
}

@code {
    [Parameter]
    public List<Procedimientos> lista { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    byte[] Data;
    string pdfContent = "";

    protected override void OnInitialized()
    {
        VerReporte();
    }

    public void VerReporte()
    {
        ProcedimientosReport procedimientos = new ProcedimientosReport();

        Data = procedimientos.Reporte(lista);

        pdfContent = "data:application/pdf;base64,";
        pdfContent += System.Convert.ToBase64String(Data);

    }
}
